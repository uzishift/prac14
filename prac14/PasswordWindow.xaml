<Window x:Class="prac14.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prac14"
        mc:Ignorable="d"
         Title="Авторизация" Height="162" Width="300" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Grid>
        <StackPanel>
        <TextBlock Text="Введите пароль:" Margin="10" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" Margin="10,0,10,0" VerticalAlignment="Top" />
        <Button Content="Войти" Margin="10,30,10,10" Height="20" VerticalAlignment="Top" Click="btnEnter_Click"/>
        <Button Content="Выход" Margin="10,2,10,10" Height="20" VerticalAlignment="Top" Click="btnExit_Click"/>
        </StackPanel>
    </Grid>
</Window>
