<Window x:Class="prac14.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prac14"
        mc:Ignorable="d"
        Title="Настройки" Height="200" Width="300" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Количество строк:" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbRows" Margin="10,5,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="Количество столбцов:" Margin="10,20,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbCols" Margin="10,5,10,0" VerticalAlignment="Top"/>

        <Button Content="Сохранить" Margin="10,20,10,10" VerticalAlignment="Top" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
